<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="right"
        android:layout_gravity="center_vertical|right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="استفسار"
            android:background="@color/colorAccent"
            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/name_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="سائد ابو معيلق"
                android:textSize="25sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="منذ 8 ساعات"
                android:textSize="18sp"/>
        </LinearLayout>



        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_gravity="right"
            android:layout_height="100dp"
            android:id="@+id/img_circle_myProfile"
            android:src="@mipmap/ic_launcher"
            app:civ_border_width="2dp"
            app:civ_border_color="#fff" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="اين تقع شركه الجلوبال بالمملكه"
        />

    <LinearLayout
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f55524"
        android:layout_weight="0"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <!--<Spinner
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buhome"
            android:onClick="bunews"
            android:textSize="12dp"
            android:textColor="#987525"
            android:textStyle="bold"
            android:background="#564321" />-->

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerCrop"
            android:text="مكة المكرمة"
            android:id="@+id/bu11"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:onClick="buyoutube"
            android:textSize="20dp"
            android:textColor="#458216"
            android:textStyle="bold"
            android:background="#482137" />
        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerCrop"
            android:text="جدة"
            android:id="@+id/bu12"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:onClick="buyoutube"
            android:textSize="20dp"
            android:textColor="#458216"
            android:textStyle="bold"
            android:background="#482137" />
        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerCrop"
            android:text="الرياض"
            android:id="@+id/bu1"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:onClick="buyoutube"
            android:textSize="20dp"
            android:textColor="#458216"
            android:textStyle="bold"
            android:background="#482137" />


    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f55524"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">


        <ImageView
            android:layout_gravity="center"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:text="like"
            android:id="@+id/bu"
            android:drawablePadding="8dp"
            android:onClick="buyoutube"
            android:textSize="12dp"
            android:textColor="#458216"
            android:textStyle="bold"
            android:background="#482137" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:text="like"
            android:id="@+id/bul"
            android:drawablePadding="8dp"
            android:onClick="buyoutube"
            android:textSize="12dp"
            android:textColor="#458216"
            android:textStyle="bold"
            android:background="#482137" />

</FrameLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:text="like"
            android:id="@+id/bulogotype"

            android:drawablePadding="8dp"
            android:onClick="buyoutube"
            android:textSize="12dp"
            android:textColor="#458216"
            android:textStyle="bold"
            android:background="#482137" />
</FrameLayout>


    </LinearLayout>


</LinearLayout>